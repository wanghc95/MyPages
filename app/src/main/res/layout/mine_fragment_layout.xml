<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/color_F6F6F6"
>

    <LinearLayout
            android:divider="@drawable/my_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mine_menu_bg"
            android:showDividers="end|middle"
            android:orientation="vertical">
        <FrameLayout
                android:layout_width="420px"
                android:layout_height="244px">
            <CheckBox
                    android:id="@+id/mine_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/mine_photo"
                    android:paddingTop="24px"
                    android:text="青龙"
                    android:textColor="@color/white"
                    android:background="@color/mine_photo"
                    android:textSize="28px"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:lineSpacingExtra="38px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!--android:textColor="@color/mine_menu_title"-->
                <!--android:background="@color/white"-->

        </FrameLayout>
    
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
        <CheckBox
                android:id="@+id/mine_share"
                android:layout_width="420px"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableLeft="@drawable/mine_share"
                android:drawablePadding="42px"
                android:paddingLeft="82px"
                android:text="我的分享"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
        <CheckBox
                android:id="@+id/item_message"
                android:layout_width="420px"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableLeft="@drawable/item_message"
                android:drawablePadding="42px"
                android:paddingLeft="82px"
                android:text="消息中心"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mine_share"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
        <CheckBox
                android:id="@+id/item_headman"
                android:layout_width="420px"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableLeft="@drawable/item_headman"
                android:drawablePadding="42px"
                android:paddingLeft="82px"
                android:text="小组长管理"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_message"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
        <CheckBox
                android:id="@+id/item_opinion"
                android:layout_width="420px"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableLeft="@drawable/item_opinion"
                android:drawablePadding="42px"
                android:paddingLeft="82px"
                android:text="意见反馈"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_headman"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
        <CheckBox
                android:id="@+id/item_cache"
                android:layout_width="420px"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableLeft="@drawable/item_cache"
                android:drawablePadding="42px"
                android:paddingLeft="82px"
                android:text="清除缓存"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_opinion"/>
        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100px">
        <CheckBox
                android:id="@+id/item_exit"
                android:layout_width="420px"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableLeft="@drawable/item_exit"
                android:drawablePadding="42px"
                android:paddingLeft="84px"
                android:text="退出登录"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_cache"/>
        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/opinion_fragment_layout"/>

</android.support.constraint.ConstraintLayout>